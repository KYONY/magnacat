{
  "manifest_version": 3,
  "name": "Magnacat Translator",
  "version": "1.0.0",
  "description": "Translate text between Ukrainian and English using Gemini AI",
  "permissions": ["activeTab", "storage", "contextMenus"],
  "host_permissions": [
    "https://generativelanguage.googleapis.com/*"
  ],
  "background": {
    "service_worker": "src/background/service-worker.ts",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content/content.ts"],
      "css": []
    }
  ],
  "action": {
    "default_popup": "src/popup/popup.html",
    "default_title": "Magnacat Translator"
  },
  "icons": {}
}
